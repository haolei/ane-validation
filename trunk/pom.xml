  <name>ANE Validation</name>
  <description>Activex ane-validation</description>
  <url>http://www.activenetwork.com</url>

  <packaging>jar</packaging>

  <dependencies>
   <dependency>
	<groupId>javax.validation</groupId>
	<artifactId>validation-api</artifactId>
	<version>1.1.0.Final</version>
   </dependency>
<dependency>
	<groupId>org.springframework</groupId>
	<artifactId>spring-context</artifactId>
	<version>3.2.1.RELEASE</version>
</dependency>
            

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.4</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
<build>
		<plugins>

			<!--
				plugin> <groupId>org.codehaus.sonar</groupId>
				<artifactId>sonar-maven-plugin</artifactId> <version>2.2</version>
